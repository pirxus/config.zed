// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor || Workspace",
    "bindings": {
      "ctrl-shift-e": "workspace::ToggleLeftDock",
      "ctrl-x": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-w z": "workspace::ToggleZoom",
      "ctrl-w t": "terminal_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "g ]": "editor::GoToDiagnostic",
      "g [": "editor::GoToPreviousDiagnostic"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor",
      "bindings": {
      "ctrl-shift-backspace": "repl::ClearOutputs"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-shift-u": "vim::ScrollUp",
      "ctrl-shift-d": "vim::ScrollDown"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-u": [
        "workspace::SendKeystrokes",
        "ctrl-shift-u z z"
      ]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-d": [
        "workspace::SendKeystrokes",
        "ctrl-shift-d z z"
      ]
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion"
    }
  },
  {
    "bindings": {
      "ctrl-shift-escape": "workspace::ToggleZoom"
    }
  },
  {
    "bindings": {
      "shift-escape": null
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "space w": "pane::ActivateNextItem"
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "space q": "pane::ActivatePreviousItem"
    }
  }
]
